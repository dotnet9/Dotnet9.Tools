@inject CategoryService CategoryService

<nav>
    <div class="topnav">
        <ul id="starlist">
            @if (_categories?.Count > 0)
            {
                @foreach (var cat in _categories)
                {
                    <li>
                        <a title="@cat.Description" href="/categories/@cat.Slug">@cat.Name.ToMarkupString() (@cat.BlogCount)</a>
                    </li>
                }
            }
        </ul>
    </div>
</nav>

@code {
    List<CategoryBrief>? _categories;

    protected override async Task OnInitializedAsync()
    {
        _categories = await CategoryService.GetBriefAsync();
    }

}