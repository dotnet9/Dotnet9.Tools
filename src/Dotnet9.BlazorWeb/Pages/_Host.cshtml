<script src="https://cdn.staticfile.org/highlight.js/11.7.0/highlight.min.js"></script>

<script type="text/javascript">
        window.highlightJsInterop = {
            initHighlightJs: function () {
                document.querySelectorAll('pre code').forEach((block) => {
                    hljs.highlightBlock(block);
                });
                
                // 获取所有的img标签
                const imgs = document.getElementsByTagName('img');

                // 遍历所有的img标签
                for (let i = 0; i < imgs.length; i++) {
                    // 给每个img标签添加点击事件
                    imgs[i].addEventListener('click', function () {
                        // 创建一个新的img标签
                        const newImg = document.createElement('img');
                        // 设置新img标签的src为当前点击的img标签的src
                        newImg.src = this.src;
                        // 设置新img标签的样式
                        newImg.style.position = 'fixed';
                        newImg.style.top = '0';
                        newImg.style.left = '0';
                        newImg.style.width = '100%';
                        newImg.style.height = '100%';
                        newImg.style.objectFit = 'contain';
                        newImg.style.backgroundColor = 'rgba(0, 0, 0, 0.8)';
                        newImg.style.zIndex = '9999';
                        newImg.style.cursor = 'zoom-out';
                        // 将新img标签添加到body中
                        document.body.appendChild(newImg);
                        // 给新img标签添加点击事件，点击后移除新img标签
                        newImg.addEventListener('click', function () {
                            document.body.removeChild(newImg);
                        });
                    });
                }
            }
        };
        function handlePseudoLinks() {
            var pseudoLinks = document.querySelectorAll('a[href^="#"]');
            pseudoLinks.forEach(function (link) {
                var href = link.getAttribute('href');
                var absoluteUri = window.location.origin + window.location.pathname + href;
                link.setAttribute('href', absoluteUri);
            });
        }
    </script>

