        }
        _chess[row, cell] = _myChesspiece;
        var isWin = IsWin(_myChesspiece, row, cell);
        if (isWin)
        {
            JsRuntime.InvokeAsync<string>("alert", "高手，您赢了");
            _playStatus = 0;
            return;
        }
        MachinePlay(_machineChesspiece);
    }

