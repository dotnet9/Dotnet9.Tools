            {
                _chess[myPoint.Point.Row, myPoint.Point.Cell] = chesspiece;
                var isWin = IsWin(_machineChesspiece, myPoint.Point.Row, myPoint.Point.Cell);
                if (isWin)
                {
                    JsRuntime.InvokeAsync<string>("alert", "电脑赢了，您有点垃");
                    _playStatus = 0;
                    return;
                }
            }
            else
            {
                _chess[enemyPoint.Point.Row, enemyPoint.Point.Cell] = chesspiece;
                var isWin = IsWin(_machineChesspiece, enemyPoint.Point.Row, enemyPoint.Point.Cell);
                if (isWin)
                {
